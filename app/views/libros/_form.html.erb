<%= form_tag url_for(:controller => 'libros', :action => 'buscar_amazon') do %>
	<div>
		<% text_field_tag :isbn, params[:isbn] %>
	</div>	
	<div class = "actions">
		<%= submit_tag "Buscar", :class => 'ingresar' %>
	</div>
<% end %>


