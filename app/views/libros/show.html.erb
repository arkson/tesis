
<div class = "mostrar">
<p>
  <b>Cota:</b>
  <%= @libro.cota %>
</p>

<p>
  <b>Titulo:</b>
  <%= @libro.titulo %>
</p>

<p>
  <b>Autor:</b>
  <%= @libro.autor %>
</p>

<p>
  <b>Imagen:</b>
  <%= image_tag @libro.imagen.url(:thumb) %>
</p>

<p>
  <b>Edicion:</b>
  <%= @libro.edicion %>
</p>

<p>
  <b>Lugar impresion:</b>
  <%= @libro.lugar_impresion %>
</p>

<p>
  <b>Ano:</b>
  <%= @libro.ano %>
</p>

<p>
  <b>Isbn:</b>
  <%= @libro.isbn %>
</p>

<p>
  <b>Editorial:</b>
  <%= link_to @libro.editorial.nombre, @libro.editorial %>
</p>

<p>
  <b>Area conocimiento:</b>
  <%= link_to @libro.area_conocimiento.nombre,@libro.area_conocimiento %>
</p>

<p>
  <b>Dependencia:</b>
  <%= link_to @libro.dependencia.nombre, @libro.dependencia %>
</p>
</div>

<%= link_to 'Editar', edit_libro_path(@libro), :id => "links" %> &nbsp
<%= link_to 'Regresar', :back, :id => "links" %>
