<%= form_for(@usuario) do |f| %>
  <% if @usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

      <ul>
      <% @usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <legend>Ingrese los Datos de la Cuenta</legend>

  <div class="field">
    <%= f.label :nombre %>:<br />
    <%= f.text_field :nombre, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :cedula %>:<br />
    <%= f.text_field :cedula, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :password, 'Clave' %>:<br />
    <%= f.password_field :password, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, 'Confirmar' %>:<br />
    <%= f.password_field :password_confirmation, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :correo %>:<br />
    <%= f.email_field :correo %>
  </div>
  <div class="field">
    <%= f.label :unid_creditos %>:<br />
    <%= f.number_field :unid_creditos %>
  </div>
  <div class="field">
    <%= f.label :rol, 'Rol' %>:<br />
    <%= f.select "rol",
                         "<option value = 'Administrador'>Administrador</option>
                          <option value = 'Estudiante'>Estudiante</option>
                          <option value = 'Operador'>Operador</option>"
                          %>
  </div>

  <div class="field">
    <%= f.label :dependencia %>:<br />
    <%= f.collection_select :dependencia_id, Dependencia.all, :id, :nombre %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

 

<% end %>
