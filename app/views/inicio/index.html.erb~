 <%= will_paginate @noticias , :prev_label => "Anterior", :next_label => "Siguiente" %>

 <table>
<% @noticias.each do |noticia| %>
  <tr>
	<td><%= sanitize(noticia.titulo) %></td></br>
	<td> <%= image_tag(noticia.imagen.url(:thumb),:class => 'list_image') %></td>
	<td><%= sanitize(noticia.contenido) %></td>
	 </tr>
<% end %>
</table>




	<script>
	$(function() {
		$( "#dialog:ui-dialog" ).dialog( "destroy" );		
		
		$( "#dialog-form,#dialog-form2" ).dialog({
			autoOpen: false,
			height: 300,
			width: 350,
			modal: true,
		});

		$( "#acceder" )
			.button()
			.click(function() {
				$( "#dialog-form" ).dialog( "open" );
			});

		$( "#olvido" )
			.button()
			.click(function() {
				$( "#dialog-form2" ).dialog( "open" );
			});

	});
	</script>



<div class="demo">

<div id="dialog-form" class="login" style="border:#333333 solid 1px;background:#ffffff;">

