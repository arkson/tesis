	<fieldset>
		<legend>Iniciar sesi&oacute;n</legend>
		<div>
			<label for="cedula">Cédula:</label>
			<%= text_field_tag :cedula, params[:cedula] %>
		</div>
		<div>
			<label for="Clave">Clave:</label>
			<%= password_field_tag :password, params[:password] %>
		</div>
		<div>
			<label>Texto de la imagen:</label>
			<%= show_simple_captcha(:image_style => 'simply_blue', :distortion => 'medium',:label => "")  %>
		</div>
		<div>
			<%= submit_tag "Ingresar" %>
		</div>
		<div>
			Olvid&oacute; su clave?
		</div>
	</fieldset>
<% end %>
</div>


