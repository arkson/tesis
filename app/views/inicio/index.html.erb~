	<script>
	$(function() {
		$( "#dialog:ui-dialog" ).dialog( "destroy" );		
		
		$( "#dialog-form" ).dialog({
			autoOpen: false,
			height: 300,
			width: 350,
			modal: true,
		
		});

		$( "#acceder" )
			.button()
			.click(function() {
				$( "#dialog-form" ).dialog( "open" );
			});

	});
	</script>



