<%= form_for(@dependencia) do |f| %>
  <% if @dependencia.errors.any? %>
    <div id="error_explanation">
     <h2><%= t('errors.template.header', :count=>@dependencia.errors.size,:model=>t('activerecord.models.dependencia')) %>.</h2>
	 <p><%= t('errors.template.body') %></p>
    <ul>
      <% @dependencia.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :tipo_dependencia %><br />
    <%= f.text_field :tipo_dependencia %>
  </div>
  <div class="actions">
    <%= f.submit t('.submit') %>
  </div>
<% end %>
