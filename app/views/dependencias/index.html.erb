

<div class ="titulo"><h1>Listado de dependencias</h1></div>
<div class ="busqueda">
  <%= form_for @search do |f| %>
    <%= f.label :Buscar, :class => "buscar" %>
    <%= f.text_field :nombre_contains %>
    <!-- etc... -->
    <%= f.submit :buscar %>
  <% end %>
</div>

<%= will_paginate @dependencias , :previous_label => "Anterior", :next_label => "Siguiente", :class => "paginacion" %>

<table class="tabla_scaffold" width="98%">
<% @dependencias.each do |dependencia| %>
<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
<td class="list_description">
<dl>
<dt> <%= dependencia.nombre %></dt>
<dd> Tipo de dependencia: <%= dependencia.tipo_dependencia %></dt>
</dl>
</td>
<td class="list_actions" width="5%">
    <%= link_to 'Mostrar', dependencia %>
    <%= link_to 'Editar', edit_dependencia_path(dependencia) %>
    <%= link_to 'Eliminar', dependencia, :confirm => 'Â¿Estas seguro?', :method => :delete %>
</td>
</tr>
<% end %>
</table>
<%= will_paginate @dependencias , :previous_label => "Anterior", :next_label => "Siguiente", :class => "paginacion" %>
<br />

<button id="link"><%= link_to 'Nueva Dependencia', new_dependencia_path %></button>
