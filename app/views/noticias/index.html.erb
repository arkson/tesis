<div class = "informacion">
<h1>Listado de noticias</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Contenido</th>
    <th>Tipo contenido</th>
    <th>Fecha</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @noticias.each do |noticia| %>
  <tr>
    <td><%= noticia.titulo %></td>
	<td><%= truncate(noticia.contenido, :length => 50) %></td>
    <td><%= noticia.tipo_contenido %></td>
    <td><%= noticia.fecha %></td>
    <td><%= link_to 'Mostrar', noticia %></td>
    <td><%= link_to 'Editar', edit_noticia_path(noticia) %></td>
    <td><%= link_to 'Eliminar', noticia, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva noticia', new_noticia_path %>
</div>
