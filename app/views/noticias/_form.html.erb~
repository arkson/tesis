<script type="text/javascript">bkLib.onDomLoaded(nicEditors.allTextAreas);</script>
<%= form_for(@noticia) do |f| %>
  <% if @noticia.errors.any? %>
    <div id="error_explanation">
       <h2><%= t('errors.template.header', :count=>@noticia.errors.size,:model=>t('activerecord.models.noticia')) %>.</h2>
	   <p><%= t('errors.template.body') %></p>
      <ul>
      <% @noticia.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titulo %><br />
    <%= f.text_field :titulo %>
  </div>

  <div class="field">
	<%= f.label :tipo_contenido, 'Tipo de contenido ' %><br />

	<%= f.collection_select :id, Noticia.all, :id, :tipo_contenido %>
  </div>	

  <div class="field">
    <%= f.label :imagen %><br />
    <%= f.file_field :imagen %>
  </div>

  <div class="field">
    <%= f.label :contenido %>
    <%= f.text_area :contenido %>
  </div>  	

  <div class="field">
    <%= f.label :fecha %><br />
    <%= f.date_select :fecha %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit')%>
  </div>

<% end %>
