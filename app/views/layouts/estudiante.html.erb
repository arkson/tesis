<!DOCTYPE html>
<html>
<head>
  <title>..::Bolsa del Libro::..</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag :application %>
  <%= csrf_meta_tags %>
 
</head>
<body class="<%= controller.controller_name %>">


		<% usuario = Usuario.find(session[:usuario_id]) %>
		
		<div class="Header">

			<div class="logo"><%= link_to "", ppal_estudiante_index_path %></div> 
			<div class="titulo_banner"><%= button_to 'Cerrar Sesion', logout_path, :method => :delete, :id => "csesion" %></div>
			<div class="panel">
				<% if session[:usuario_id] %>
					<a class = "usuario">Usuario: <%= usuario.nombre %></a> 
				<% end %>
			</div>

		<%= render(:partial => "layouts/menu") %>
		</div>

		<div class="Contenido_estud">
			<%= render(:partial => "layouts/menu_estudiante") %>			
			<div id="columns">

				<div id="side">

					<%= hidden_div_if(@cart.line_item.empty?, :id => 'cart') do %>
						<%= render @cart %>
					<% end %>
			
				</div>

				<div id="main">
					<div class = "migas">Usted está aquí: <%= render_breadcrumbs :separator => ' / ' %></div>
					<%= yield %>
				</div>
			
			</div>
		</div>

	
		<!--<div class="push"></div>-->		
		


	<!--<div class = "borde_inferior"></div>-->
	<%= render(:partial => "layouts/footer") %>

</body>
</html>
